<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.VideoActivity">

    <LinearLayout
        app:layout_constraintVertical_weight="1"
        android:id="@+id/llPlayControl"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp">

        <Button
            android:text="@string/btn_play"
            android:id="@+id/btnPlayVideo"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <SeekBar
            android:id="@+id/sbVideoProgress"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        app:layout_constraintVertical_weight="9"
        app:layout_constraintTop_toBottomOf="@+id/llPlayControl"
        android:id="@+id/llVideoMain"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button
            android:text="play file"
            android:id="@+id/btnPlayFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <VideoView
            android:id="@+id/vvMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>







</android.support.constraint.ConstraintLayout>